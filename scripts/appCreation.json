 {
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "MCSModules": {
            "type": "object"
        }
    },
    "variables": {
        
    },
    "resources": [
         {
            "name": "[concat(parameters('MCSModules').wsVmName,'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('MCSModules').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('MCSModules').wsVmName)]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('MCSModules').workstationSetup]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell.exe -File workstationsetup1.ps1')]"
                }
            }
        }
    ]
 }
