{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location":{
            "type": "string"
        },
         "sqlservername":{
            "type": "string"
        }
    },
    "variables": {
       "sqlservername":"sqlserver",
        "scriptFileName3":"simulatorsetup.ps1",
        "fileUri":"https://raw.githubusercontent.com/sysgain/iot-automation/dev/scripts/simulatorsetup.ps1",
         "simulatorUrl":"https://iotapps1.blob.core.windows.net/simulator/SimulatorSetup.msi"

    },
    "resources": [
        {
              "name": "[concat(variables('sqlservername'),'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('location')]",
            "apiVersion":"2016-04-30-preview",
                "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[variables('fileUri')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', variables('scriptFileName3'),' ',variables('simulatorUrl'),' ',variables('sqlservername'))]"
                }
            }
        }
    ]
}
